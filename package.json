{
  "name": "synchro-bus-mcp-server",
  "version": "1.0.0",
  "description": "A Model Context Protocol server for accessing Synchro Bus (Instant-System) API",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "synchro-bus-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc-watch --onSuccess \"node dist/index.js\"",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "mcp",
    "synchro-bus",
    "instant-system",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "axios": "^1.6.7",
    "dotenv": "^16.4.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.3.3"
  }
}
